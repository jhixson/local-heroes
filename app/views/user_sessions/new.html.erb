<%= form_for @user_session, :url => login_path do |f| %>
  <% if @user_session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_session.errors.count, "error") %> occurred:</h2>
      <ul>
      <% @user_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login, { :class => "text" } %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password, { :class => "text" } %>
  </p>
  <p><%= f.check_box :remember_me, { :class => "checkbox" }%><%= f.label :remember_me %></p>
  <div class="actions">
    <%= f.submit "Login" %>
  </div>
<% end %>

